'use client';

import Header from "@/components/Header";
import Footer from "@/components/Footer";
import { useEffect, useState } from 'react';
import {
  Cpu,
  HardDrive,
  Monitor,
  Battery,
  CreditCard,
  Server,
} from "lucide-react";

interface LaptopSpec {
  cpu: string;
  gpu: string;
  ram: string;
  ssd: string;
  screen: string;
  battery: string;
}

interface Category {
  _id: string;
  name: string;
  slug: string;
}

interface Brand {
  _id: string;
  name: string;
  slug: string;
}

interface Product {
  _id: string;
  name: string;
  model: string;
  price: number;
  image: string;
  images: string[];
  specs: LaptopSpec;
  categoryId: Category;
  brandId: Brand;
  status: string;
}

export default function HomePage() {
  const [categories, setCategories] = useState<Category[]>([]);
  const [laptopsByCategory, setLaptopsByCategory] = useState<{ [key: string]: Product[] }>({});
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    fetchData();
  }, []);

  const fetchData = async () => {
    try {
      // Fetch categories and laptops
      const [categoriesRes, laptopsRes] = await Promise.all([
        fetch('/api/admin/categories'),
        fetch('/api/admin/laptops'),
      ]);

      const categoriesData = await categoriesRes.json();
      const laptopsData = await laptopsRes.json();

      if (categoriesData.success) {
        setCategories(categoriesData.data);
      }

      if (laptopsData.success) {
        // Group laptops by category
        const grouped: { [key: string]: Product[] } = {};

        laptopsData.data.forEach((laptop: Product) => {
          if (laptop.status === 'active' && laptop.categoryId) {
            const categoryId = laptop.categoryId._id;
            if (!grouped[categoryId]) {
              grouped[categoryId] = [];
            }
            grouped[categoryId].push(laptop);
          }
        });

        setLaptopsByCategory(grouped);
      }
    } catch (error) {
      console.error('Error fetching data:', error);
    } finally {
      setLoading(false);
    }
  };

  if (loading) {
    return (
      <main className="min-h-screen bg-white text-slate-800 font-sans">
        <div className="container mx-auto px-4 py-20">
          <div className="text-center">
            <div className="animate-spin rounded-full h-16 w-16 border-b-4 border-[#004e9a] mx-auto"></div>
            <p className="text-gray-600 mt-4 text-lg">Đang tải sản phẩm...</p>
          </div>
        </div>
      </main>
    );
  }

  return (
    <main className="min-h-screen bg-white text-slate-800 font-sans">
      {/* Product Sections */}
      <div className="container mx-auto px-4 pb-20 space-y-16">
        {categories.map((category) => {
          const laptops = laptopsByCategory[category._id] || [];

          // Skip categories with no laptops
          if (laptops.length === 0) return null;

          return (
            <section key={category._id}>
              {/* Section Title */}
              <h2 className="text-xl md:text-2xl font-bold text-[#003366] mb-6 border-l-4 border-[#003366] pl-3">
                {category.name}
              </h2>

              {/* Product Grid */}
              <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                {laptops.slice(0, 4).map((product) => (
                  <ProductCard key={product._id} product={product} />
                ))}
                <>
                  <Header />
                  <main className="flex-1 container mx-auto p-4">
                    <div className="space-y-12">
                      {/* Hero Section */}
                      <section className="text-center py-12 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-2xl shadow-xl">
                        <h1 className="text-5xl font-bold mb-4">Chào mừng đến LapLap</h1>
                        <p className="text-xl mb-6">Nơi cung cấp laptop chất lượng cao với giá tốt nhất</p>
                      </section>

                      {/* Categories */}
                      {loading ? (
                        <div className="text-center py-12">
                          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
                        </div>
                      ) : (
                        categories.map((category) => (
                          <section key={category._id} className="space-y-6">
                            <h2 className="text-3xl font-bold text-gray-800 border-b-4 border-blue-600 pb-2 inline-block">
                              {category.name}
                            </h2>
                            {laptopsByCategory[category._id] && laptopsByCategory[category._id].length > 0 ? (
                              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                                {laptopsByCategory[category._id].map((laptop) => (
                                  <a
                                    key={laptop._id}
                                    href={`/laptops/${laptop._id}`}
                                    className="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group transform hover:scale-105"
                                  >
                                    <div className="relative h-48 bg-gray-100">
                                      {laptop.image ? (
                                        <img
                                          src={laptop.image}
                                          alt={laptop.name}
                                          className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                                        />
                                      ) : (
                                        <div className="w-full h-full flex items-center justify-center text-gray-400">
                                          No Image
                                        </div>
                                      )}
                                    </div>
                                    <div className="p-4">
                                      <h3 className="font-bold text-lg text-gray-800 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                                        {laptop.name}
                                      </h3>
                                      <div className="flex items-center gap-2 mb-3">
                                        <span className="text-sm text-gray-600">{laptop.brandId?.name}</span>
                                      </div>
                                      <div className="space-y-2 mb-4">
                                        <div className="flex items-center gap-2 text-sm text-gray-600">
                                          <Cpu className="w-4 h-4" />
                                          <span>{laptop.specs.cpu}</span>
                                        </div>
                                        <div className="flex items-center gap-2 text-sm text-gray-600">
                                          <Server className="w-4 h-4" />
                                          <span>{laptop.specs.ram}</span>
                                        </div>
                                      </div>
                                      <div className="text-2xl font-bold text-blue-600">
                                        {new Intl.NumberFormat('vi-VN', {
                                          style: 'currency',
                                          currency: 'VND',
                                        }).format(laptop.price)}
                                      </div>
                                    </div>
                                  </a>
                                ))}
                              </div>
                            ) : (
                              <p className="text-gray-500 text-center py-8">Không có sản phẩm nào trong danh mục này</p>
                            )}
                          </section>
                        ))
                      )}
                    </div>
                  </main>
                  <Footer />
                </>
                );
}

                // Product Card Component
                function ProductCard({product}: {product: Product }) {
  const formatPrice = (price: number) => {
    return new Intl.NumberFormat('vi-VN').format(price);
  };

                return (
                <a
                  href={`/laptops/${product._id}`}
                  className="border-[1.5px] border-[#004e9a] rounded-2xl p-4 flex flex-col items-center bg-white hover:shadow-xl transition-shadow duration-300 cursor-pointer"
                >
                  {/* Product Image */}
                  <div className="relative w-full aspect-[4/3] mb-4 overflow-hidden rounded-lg">
                    <img
                      src={product.image || product.images[0] || 'https://placehold.co/400x300/e5e7eb/64748b?text=No+Image'}
                      alt={product.name}
                      className="w-full h-full object-cover object-center"
                    />
                  </div>

                  {/* Product Name */}
                  <h3 className="text-xl font-extrabold text-[#004e9a] mb-4 text-center uppercase">
                    {product.name}
                  </h3>

                  {/* Specs Grid */}
                  <div className="w-full grid grid-cols-2 gap-y-3 gap-x-2 text-sm font-bold text-slate-800 mb-6">
                    {/* CPU */}
                    <div className="flex items-center gap-2">
                      <Cpu className="w-5 h-5 text-[#004e9a]" strokeWidth={2.5} />
                      <span>{product.specs.cpu}</span>
                    </div>

                    {/* GPU */}
                    <div className="flex items-center gap-2">
                      <CreditCard className="w-5 h-5 text-[#004e9a]" strokeWidth={2.5} />
                      <span>{product.specs.gpu}</span>
                    </div>

                    {/* RAM */}
                    <div className="flex items-center gap-2">
                      <Server className="w-5 h-5 text-[#004e9a]" strokeWidth={2.5} />
                      <span>{product.specs.ram}</span>
                    </div>

                    {/* SSD */}
                    <div className="flex items-center gap-2">
                      <HardDrive className="w-5 h-5 text-[#004e9a]" strokeWidth={2.5} />
                      <span>{product.specs.ssd}</span>
                    </div>

                    {/* Screen */}
                    <div className="flex items-center gap-2">
                      <Monitor className="w-5 h-5 text-[#004e9a]" strokeWidth={2.5} />
                      <span>{product.specs.screen}</span>
                    </div>

                    {/* Battery */}
                    <div className="flex items-center gap-2">
                      <Battery className="w-5 h-5 text-[#004e9a]" strokeWidth={2.5} />
                      <span>{product.specs.battery}</span>
                    </div>
                  </div>

                  {/* Price */}
                  <div className="mt-auto text-2xl font-extrabold text-[#004e9a]">
                    {formatPrice(product.price)}
                  </div>
                </a>
                );
}